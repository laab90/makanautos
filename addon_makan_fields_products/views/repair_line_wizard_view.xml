                </group>
                <footer>
                    <button string="Generar Reporte" type="object" name="generar_reporte_manoobra" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>